<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>

    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="actionMenuTextColor">#fff</item><!-- actionbar buttons text color -->
        <item name="android:textColorPrimary">#fff</item><!-- actionbar text color -->
        <item name="android:textColorSecondary">#fff</item><!-- actionbar buttons color -->

    </style>

    <style name="AppTheme.BaseActivity" parent="AppTheme">

        <item name="android:windowAnimationStyle">@style/AppTheme.ActivityTransition</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActivityTransition" parent="@android:style/Animation.Activity">

        <item name="android:activityOpenEnterAnimation">@anim/content_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/content_support_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/content_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/content_support_anim</item>
    </style>

    <style name="actionbar_popup" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.ChooseDrinkDialog" >

        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!--<item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:buttonBarStyle">@null</item>
        <item name="android:borderlessButtonStyle">@null</item>

        <item name="android:textAppearance">@null</item>
        <item name="android:textAppearanceInverse">@null</item>

        <item name="android:listPreferredItemPaddingLeft">0dip</item>
        <item name="android:listPreferredItemPaddingRight">0dip</item>
    </style>

    <style name="AppTheme.ChooseDrinkDialog.Seek">
        <item name="colorControlActivated">@color/color_main_element</item>
    </style>

</resources>
