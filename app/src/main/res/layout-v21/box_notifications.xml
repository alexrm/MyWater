<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/notifications_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:textSize="14sp"
        android:textColor="@color/color_settings_title"
        android:text="@string/notifications_notify"/>

    <Switch
        android:id="@+id/notifications_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifications_text"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textSize="18sp"
        android:text="@string/notifications_notify_allow"
        android:textColor="@android:color/secondary_text_light"
        android:checked="true"/>

    <View
        android:id="@+id/notifications_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/notifications_switch"
        android:layout_marginTop="8dp"
        android:background="#cccc"
        />

</RelativeLayout>